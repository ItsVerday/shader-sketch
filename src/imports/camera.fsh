vec3 camera_look(float A,float B,float C,float D,vec2 E){E=E*2.-1.;B=B*PI/180.;A=A*PI/180.;C/=2.;vec3 F=vec3(cos(A)*cos(B),sin(B),sin(A)*cos(B));vec3 G=vec3(cos(A)*cos(B+PI/2.),sin(B+PI/2.),sin(A)*cos(B+PI/2.));vec3 H=cross(F,G);E.y/=D;float I=tan(C*PI/180.);G*=I;H*=I;return normalize(F+H*E.x+G*E.y);}