float sdf_sphere_basic(vec3 A){return length(A)-1.;}float sdf_sphere(vec3 A,vec3 B,float C){return sdf_sphere_basic((A-B)/C)*C;}float sdf_box_basic(vec3 A,vec3 D){vec3 E=abs(A)-D;return length(max(E,0.))+min(max(E.x,max(E.y,E.z)),0.);}float sdf_box(vec3 A,vec3 F,vec3 G){vec3 H=abs(F-G);vec3 I=(F+G)/2.;return sdf_box_basic(A-I,H);}float sdf_plane(vec3 A,vec4 J){return dot(A,J.xyz)+J.w;}float sdf_union(float K,float L){return min(K,L);}float sdf_smooth_union(float K,float L,float M){float N=clamp(0.5+0.5*(L-K)/M,0.,1.);return mix(L,K,N)-M*N*(1.-N);}float sdf_intersection(float K,float L){return max(K,L);}float sdf_smooth_intersection(float K,float L,float M){float N=clamp(0.5-0.5*(L-K)/M,0.,1.);return mix(L,K,N)+M*N*(1.-N);}float sdf_subtraction(float K,float L){return sdf_intersection(K,-L);}float sdf_smooth_subtraction(float K,float L,float M){float N=clamp(0.5-0.5*(L+K)/M,0.,1.);return mix(L,-K,N)+M*N*(1.-N);}